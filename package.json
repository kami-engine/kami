{
  "name": "@kami-engine/kami",
  "version": "0.1.0",
  "description": "Kami game engine built with TypeScript on top of Love2D.",
  "files": [
    "dist/**/*.lua",
    "dist/**/*.d.ts"
  ],
  "types": "./dist/index.d.ts",
  "main": "./dist/index",
  "scripts": {
    "prepare": "tstl -p tsconfig.build.json",
    "kami-clean": "rimraf ./dist",
    "kami-build": "tstl -p tsconfig.build.json",
    "build": "run-s kami-clean kami-build",
    "prettier": "prettier --check ./tests ./src",
    "lint": "eslint ./tests ./src",
    "clean-tests": "rimraf ./tests_out",
    "build-tests": "pnpm clean-tests && tstl -p tsconfig.tests.json",
    "run-tests": "busted",
    "run-tests:dev": "busted --run=devUnit",
    "test": "run-s clean-tests build-tests run-tests",
    "test:dev": "run-s clean-tests build-tests run-tests:dev"
  },
  "keywords": [],
  "author": "Jurmerlo",
  "license": "MIT",
  "devDependencies": {
    "@kami-engine/eslint-config": "github:kami-engine/eslint-config",
    "@kami-engine/prettier-config": "github:kami-engine/prettier-config",
    "@typescript-to-lua/language-extensions": "^1.19.0",
    "busted-tstl": "0.1.2-rc.0",
    "eslint": "^9.25.1",
    "love-typescript-definitions": "^11.5.0",
    "lua-types": "^2.13.1",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "typescript-to-lua": "^1.31.0"
  }
}
